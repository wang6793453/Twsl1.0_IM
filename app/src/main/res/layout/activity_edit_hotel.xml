<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>
    <ScrollView
        android:layout_above="@id/btn_submit"
        android:layout_below="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:textColor="@color/blackC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="酒店名称"
                    android:textSize="@dimen/t16"/>

                <com.twlrg.twsl.widget.AutoFitTextView
                    android:id="@+id/tv_hotel_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/windowBackground"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:textColor="@color/blackC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="所在省份"
                    android:textSize="@dimen/t16"/>

                <TextView
                    android:textColor="@color/blackC"
                    android:id="@+id/tv_province"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/windowBackground"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="所在城市"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t16"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/windowBackground"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>


            <LinearLayout
                android:id="@+id/ll_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="所在区域"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t16"/>

                <TextView
                    android:id="@+id/tv_region"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:textColor="@color/blackC"
                    android:background="@color/windowBackground"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_down_64"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="街道地址"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:id="@+id/ll_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:textColor="@color/blackC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="酒店星级"
                    android:textSize="@dimen/t16"/>

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_down_64"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:textColor="@color/blackC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="电话"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="传真"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_fax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textColor="@color/blackC"
                    android:text="品牌"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackC"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="房间数量"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_rooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:digits="0123456789"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackC"
                    android:layout_weight="2.5"
                    android:text="开业时间"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_opening_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:textColor="@color/blackC"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="装修时间"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_decoration_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackC"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textColor="@color/blackC"
                    android:text="酒店简介"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:textColor="@color/blackC"
                    android:id="@+id/et_summary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:textColor="@color/blackC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="点评标签"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_reviews_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/blackC"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="服务标签"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_service_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:textColor="@color/blackC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="位置标签"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_position_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:textColor="@color/blackC"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/blackC"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="附近餐饮"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_restaurant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:textColor="@color/blackC"
                    android:background="@color/transparent"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:textColor="@color/blackC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="附近购物"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_shopping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:textColor="@color/blackC"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/blackC"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="附近娱乐"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_entertainment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:textColor="@color/blackC"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="附近地铁站"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_metro_station"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:textColor="@color/blackC"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="horizontal"
                android:padding="@dimen/dm_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textColor="@color/blackC"
                    android:text="附近景点"
                    android:textSize="@dimen/t16"/>

                <EditText
                    android:id="@+id/et_scenic_spot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:textColor="@color/blackC"
                    android:hint="请输入"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/line"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/t18"/>
</RelativeLayout>